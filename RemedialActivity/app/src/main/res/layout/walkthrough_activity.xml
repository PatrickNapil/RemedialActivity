<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
 />

    <LinearLayout
        android:id="@+id/ll_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:layout_above="@+id/screen_navigation_button"
        android:padding="15dp" >

        <Button
            android:id="@+id/btn1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/circle2" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/circle" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/circle" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/circle" />
    </LinearLayout>


    <!--  This TextView will not swipe when you swipe in the ViewPager -->


        <LinearLayout
            android:id="@id/screen_navigation_button"
            android:orientation="horizontal"
            android:background="#000"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            >


            <Button
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:text="Sign Up"
                android:textSize="30dp"
                android:background="@drawable/but1"
                android:textColor="#fff"
                android:paddingTop="20dp"
                android:paddingBottom="15dp"
                android:layout_marginRight=".3dp"
                android:id="@+id/button"
                android:layout_weight="1"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:background="@drawable/but1"
                android:textColor="#fff"
                android:text="Log In"
                android:textSize="30dp"
                android:paddingTop="20dp"
                android:paddingBottom="15dp"
                android:id="@+id/button2"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/button"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_width="fill_parent"
        android:layout_height="40dp">


        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/but2"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:id="@+id/imageView" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="fill_parent"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="fill_parent"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="fill_parent"></LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/but3"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:id="@+id/imageView1" />
    </LinearLayout>
</RelativeLayout>